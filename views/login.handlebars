<!-- Start Login Form -->
<section class="section">
    <div class="container has-text-centered">
        <h3 class="title has-text-centered is-size-3">Login</h3>
        <div class="login">
            <!-- <img src="./assets/images/logo.png" width="325px" /> -->
            <form>
            <div class="field">
                <div class="control">
                    <label class="label has-text-centered">Email Address</label>
                    <input class="input is-primary" type="email" placeholder="hello@paws.com" autocomplete="username" required />
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <label class="label has-text-centered">Password</label>
                    <input class="input is-primary" type="password" placeholder="********" autocomplete="current-password" required />
                </div>
            </div>
            <button class="button is-primary" type="submit">
                Login
            </button>
            </form>
            <br />
            <!-- Start Forgot Password and Create Account -->
            <nav class="level has-text-centered">
                <div class="level-item has-text-centered">
                    <div>
                    <!-- No Link -->
                    <a href="#">Forgot Password?</a>
                    </div>
                </div>
                <div class="level-item has-text-centered">
                    <div>
                    <a href="/signup.html">Create an Account</a>
                    </div>
                </div>
            </nav>
            <!-- End Forgot Password and Create Account -->
        </div>
    </div>
</section>
<!-- End Login Form -->